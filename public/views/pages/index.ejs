<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="styles.css">
    <script defer src="../../../socket.io/socket.io.js"></script>
    <script defer type="module" src="../../scripts/main-client-script.js"></script>
    <title>Remote Playground</title>
</head>

<body>

        <header id="header">
            <%- include('../partials/header') %>
        </header>
    <div class="big-container">

    <div class="queue-container"></div>

    <div class="statuses-container">
        <div id="leader-box"> 
            <p class="leader-text"><b>LEADERBOARDS</b></p>    
            <p class="leader-text" style="text-decoration: none;">1.<%= entries[0].name %> - <%=  entries[0].score %></p>        
            <p class="leader-text" style="text-decoration: none;">2.<%= entries[1].name %> - <%=  entries[1].score %></p>  
            <p class="leader-text" style="text-decoration: none;">3.<%= entries[2].name %> - <%=  entries[2].score %></p>  
        </div>
    </div>        

    <div class="playground-container">
        <div class="play-box"><img id="videoStream" src="../../images/maintenance_notxt.png" height=400px width=400px></div>
        <!-- <div id="play-box"><img id="videoStream" src="/stream.mjpg"></div> /* Comment if no RPI */ -->
    </div>
    
    <div class="play-buttons">                  
        <input id="simon-startquit" type="button" class="btn-3d red leds" value="Start">
        <input id="gpio0" type="button" class="btn-3d green leds" value="LED0">
        <input id="gpio1" type="button" class="btn-3d blue leds" value="LED1">
        <input id="gpio2" type="button" class="btn-3d yellow leds" value="LED2">
        <input id="gpio3" type="button" class="btn-3d purple leds" value="LED3">               
    </div>        

    <div class="chat-container">
         <div id="chat-text-box">
            <div id="text-box">
                <ul>
                </ul>
            </div>
            <div id="chat-input-con">
            <input id="chat-input" placeholder="Type to Chat">
            <input id="chatbutton" type="button" class="button" value="Send">
            </div>
        </div>
    </div>

    </div>
</body>
</html>

